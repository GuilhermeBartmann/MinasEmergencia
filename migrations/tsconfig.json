{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "../src/config/**/*.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
